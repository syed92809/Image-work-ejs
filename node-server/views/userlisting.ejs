<!DOCTYPE html>
<html>
<head>
  <title>User Listing</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 0px solid black;
      padding: 20px;
      text-align: center;
    }
    img {
      width: 200px;
      height: auto;
    }
    input[type="checkbox"] {
      transform: scale(1.5);
    }
    .pagination {
      margin-top: 20px;
      text-align: center;
    }
    .pagination a {
      margin: 0 5px;
      padding: 8px 16px;
      background-color: #4a90e2;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
    .pagination a:hover {
      background-color: #357ab7;
    }
    .pagination a.disabled {
      pointer-events: none;
      background-color: lightgray;
    }
    h1{
      text-align: center;
    }
  </style>
</head>
<body>
  <h4><a href="/dashboard">Go to Dashboard</a></h4>

  <h1>Users Listing</h1>

  <table>
    <thead>
      <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Created Time/Date</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.created.toLocaleString() %></td>
          <td><%= user.block ? 'Blocked' : 'Active' %></td>
          <td><a href="/user-detail/<%= user.id %>">Details</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="pagination">
    <% if (currentPage > 1) { %>
      <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
    <% } else { %>
      <a class="disabled">&laquo; Previous</a>
    <% } %>


    <% if (currentPage < totalPages) { %>
      <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
    <% } else { %>
      <a class="disabled">Next &raquo;</a>
    <% } %>
  </div>

</body>
</html>
